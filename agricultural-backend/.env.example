# agricultural-backend/.env
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
REQUEST_TIMEOUT_MS=10000

# Mongo
MONGO_URI=mongodb://root:example@mongodb:27017/agricultural?authSource=admin
MONGODB_URI=mongodb://root:example@mongodb:27017/agricultural?authSource=admin
MONGOOSE_DEBUG=true
MONGO_MAX_POOL_SIZE=20
MONGO_MIN_POOL_SIZE=5
MONGO_MAX_IDLE_MS=60000
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=45000

# Optional Mongo compressors
MONGO_ENABLE_ZSTD=false
MONGO_ENABLE_SNAPPY=false

# Auth
JWT_SECRET=please-change-to-a-strong-random-secret
JWT_EXPIRES=1h
BCRYPT_SALT_ROUNDS=12
